<?xml version="1.0" encoding="UTF-8" ?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.2.xsd">


	<http auto-config="true" use-expressions="true">
		<remember-me key="tbelina" />
		
		<intercept-url pattern="/resources/**" access="permitAll" />
		<intercept-url pattern="/login" access="permitAll" />
		<intercept-url pattern="/logout" access="permitAll" />
		<intercept-url pattern="/loginfailed" access="isAnonymous()" />
		<intercept-url pattern="/**" access="isAuthenticated()" />

		<form-login login-page="/login" default-target-url="/profile" always-use-default-target="true" authentication-failure-url="/login" />
		<logout logout-success-url="/login" />

		<access-denied-handler error-page="/error/401" />
	</http>

	<authentication-manager>
		<authentication-provider>
			<password-encoder hash="sha" />
			<jdbc-user-service data-source-ref="dataSource"
				users-by-username-query="select login, password, active from users where login= ?"
				authorities-by-username-query="select login, role from users where login = ?" />
		</authentication-provider>
	</authentication-manager>

</beans:beans>
	